<%- include('../layout/admin/admin_header.ejs')  %> 
<%- include('../admin/navbar.ejs')  %> 
<%- include('../admin/sidebar.ejs')  %> 

  

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Products</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
        <li class="breadcrumb-item active">view products</li>
      </ol>
    </nav>
    <div class="add_new_product">
      <a href="/admin/addProducts"><button class="btn btn-primary">Add new products</button></a>
    </div>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        

        <div class="card">
          <div class="card-body">
            <!-- Bordered Table -->
            <table class="table table-bordered">
              <thead>
                <tr class="text-center align-middle">
                  <th scope="col">No</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Stock</th>
                  <th scop ="col">Image</th>
                  <th scop ="col">Description</th>
                  <th scop ="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% productData.forEach(function (productData , index) { %>
                  
                    <tr class="text-center align-middle">
                      <th scope="row"><%= index + 1 %></th>
                      <td><%- productData.name %></td>
                      <td><%- productData.categoryName %></td>
                      <td><%- productData.price %></td>
                      <td><%- productData.stock %></td>
                      <td><img src="/product_images/<%= productData.images[0] %>" height="100em" width="100em" alt="<%- productData.images[0] %>"></td>
                      <td><%- productData.description %></td>
  
                      <td>
                        <div class="button-wrapper d-flex justify-content-around">
                          
                          <a href="/admin/editProduct/<%= productData._id %>">
                            <button type="button" class="btn btn-warning ">Edit</button>
                          </a>
                            <% if(productData.listed === true) { %>
                              <button type="button" class="btn btn-danger" onclick="unlistPro('<%= productData._id %>')">Unlist</button>
                            <% }else{ %>
                              <button type="button" class="btn btn-danger" onclick="listPro('<%= productData._id %>')">List</button>
                            <% } %>
                            <button type="button" class="btn btn-danger" onclick="deletePro('<%= productData._id %>')">Delete</button>
                        </div>
                      </td> 
  
                    </tr>
                  
                <% }) %>
                
              </tbody>
            </table>
            <!-- End Bordered Table -->

          </div>
        </div>


      </div>
    </div>
  </section>

</main><!-- End #main -->

<script>
function deletePro(proId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to delete the product?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes !'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/deleteProduct/' + proId,
                    method: 'get',
                    success: (response) => {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'You have deleted the product!',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                    }
                })
            }
        })
    }

    function unlistPro(proId) {

      Swal.fire({
            title: 'Are you sure?',
            text: "You want to unlist the product?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes !'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/unlistProduct/' + proId,
                    method: 'get',
                    success: (response) => {
                        Swal.fire({
                            title: 'Unlisted!',
                            text: 'You have unlisted the product!',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                    }
                })
            }
        })
    }
    function listPro(proId) {

      Swal.fire({
            title: 'Are you sure?',
            text: "You want to List the product?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes !'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/listProduct/' + proId,
                    method: 'get',
                    success: (response) => {
                        Swal.fire({
                            title: 'Listed!',
                            text: 'You have Listed the product!',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                    }
                })
            }
        })
    }




</script>
  
